<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:RegAndAuth.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RegAndAuth.MainPage"
			 x:DataType="vm:MainPageVM">
	<Grid>
		<StackPanel>
			<TextBlock Text="Добро пожаловать, новый пользователь! Для дальнейшей работы необходимо авторизоваться или зарегестрироваться."></TextBlock>
			<Button Content="Авторизация" Command="{Binding ToAuthPage}" IsVisible="{Binding IsVisibleAuthBT}"></Button>
			<Button Content="Регистрация" Command="{Binding ToRegPage}" IsVisible="{Binding IsVisibleRegBT}"></Button>
			<Button Content="Зарегистрировать администратора" Command="{Binding ToRegPage}" IsVisible="{Binding IsVisibleRegBTAdmin}"></Button>
		</StackPanel>
	</Grid>
</UserControl>
