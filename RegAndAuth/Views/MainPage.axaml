<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:RegAndAuth.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RegAndAuth.MainPage"
			 x:DataType="vm:MainPageVM">
	<StackPanel>
		<TextBlock Classes="MainPage_Hi" Text="Добро пожаловать, пользователь! Чтобы перейти в личный кабинет необходимо авторизоваться."></TextBlock>
		<Image Classes="MainPage_Im" Source="avares://RegAndAuth/Assets/welcome-back.png" HorizontalAlignment="Center"></Image>
		<Button Classes="MyTB" Content="Авторизация" Command="{Binding ToAuthPage}" IsVisible="{Binding IsVisibleAuthBT}"></Button>
		<Button Classes="MyTB" Content="Регистрация" Command="{Binding ToRegPage}" IsVisible="{Binding IsVisibleRegBT}"></Button>
		<Button Classes="MyTB" Content="Зарегистрировать администратора" Command="{Binding ToRegPage}" IsVisible="{Binding IsVisibleRegBTAdmin}"></Button>
	</StackPanel>
</UserControl>
